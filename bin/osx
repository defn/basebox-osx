#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  cd "$shome"
  case "$1" in
    media)
      prepare_iso/prepare_iso.sh /Applications/Install\ OS\ X\ El\ Capitan.app dmg
      ;;
    build)
      packer build -var iso_dir="$shome" --only=vmware-iso osx.json
      ;;
  esac
}

source sub "$BASH_SOURCE" "$@"
